    <script>
        const currency = document.getElementById('currency');
        const itemCurrency = document.getElementById('itemCurrency');
        // const cost = document.getElementById('cost');
        const itemCost = document.getElementById('itemCost');

        // const rateEl = document.getElementById('rate');
        // const swap = document.getElementById('swap')
        // Fetch exchange rates and update the dome
        function calculate() {

            const currency_one = itemCurrency.value;
            const currency_two = currency.value;

            fetch(`https://v6.exchangerate-api.com/v6/2abcbb31aad39b7c981c4e3f/latest/${currency_one}`)
                .then((res) => res.json())
                .then((data) => {
                    console.log(data);
                    const rate = data.conversion_rates[currency_two];

                    // rateEl.innerText = `1 ${currency_one} = ${rate} ${currency_two}`;

                    itemCost.value = (itemCost.value * rate).toFixed(2);
                });
        }

        // Event Listeners
        currency.addEventListener('change', () => {
            itemCurrency.value = currency.value
            calculate()

        })


